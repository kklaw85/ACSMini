<Panelbase:PanelBase
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:Panelbase="clr-namespace:HiPA.Common.UControl;assembly=HiPA.Common"
             x:Class="NeoWisePlatform.UI.CommonControls.Ctrl_DisplayPanels"
             mc:Ignorable="d" 
             Loaded="UserControl_Loaded"
			 IsVisibleChanged="PageBase_IsVisibleChanged">
    <Grid Margin="0,0,0,0">
        <StackPanel VerticalAlignment="Top" x:Name="StkPnlDisplays">
            <StackPanel x:Name="CamListCmb" Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="{StaticResource Name}" Width="87" Style="{StaticResource LB_ItemContent_Left}"/>
                <ComboBox x:Name="cmbCameraList"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="270" SelectionChanged="cmbCameraList_SelectionChanged"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Panelbase:PanelBase>
