<Panelbase:PanelBase
			 xmlns:Panelbase="clr-namespace:HiPA.Common.UControl;assembly=HiPA.Common"
			 x:Class="NeoWisePlatform.CommonControls.Ctrl_InitBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 mc:Ignorable="d">
    <Grid Margin="0">
        <StackPanel Orientation="Horizontal">
            <Rectangle Style="{StaticResource Rec_Input}" x:Name="State" Margin="0,0,0,0" Fill="{Binding IsValid, Converter={StaticResource BoolToBrushIOGreenRedRec} }"/>
            <Button x:Name="Btn_Initialize" Content="Initialize" HorizontalAlignment="Left" Margin="10,0,0,0"  VerticalAlignment="Top" Width="75" Click="Btn_Click" Style="{StaticResource BtnCommon}"/>
            <Button x:Name="Btn_Stop" Content="Stop" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="75" Click="Btn_Click" Style="{StaticResource BtnCommon}"/>
        </StackPanel>
    </Grid>
</Panelbase:PanelBase>
