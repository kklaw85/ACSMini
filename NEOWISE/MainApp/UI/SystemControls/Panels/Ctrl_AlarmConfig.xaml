<Panelbase:PanelBase
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:Panelbase="clr-namespace:HiPA.Common.UControl;assembly=HiPA.Common"
             xmlns:Mahapp="http://metro.mahapps.com/winfx/xaml/controls"
             x:Class="NeoWisePlatform.SystemControls.Panels.Ctrl_AlarmConfig"
             mc:Ignorable="d" Height="auto" Width="auto">
    <Grid>
        <StackPanel>
            <CheckBox x:Name="ChkEnableCheck" Content="{StaticResource Enable}" Margin="120,0,0,0"/>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Label Content="{StaticResource LSL}" Style="{StaticResource LB_ItemContent_Right}" Width="120"/>
                <Mahapp:NumericUpDown x:Name="Txt_LSL" Value="0" Width="120" StringFormat="F3"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Label Content="{StaticResource USL}" Style="{StaticResource LB_ItemContent_Right}" Width="120"/>
                <Mahapp:NumericUpDown x:Name="Txt_USL" Value="0" Width="120" StringFormat="F3"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Panelbase:PanelBase>